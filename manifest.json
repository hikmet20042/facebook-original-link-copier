{
  "manifest_version": 3,
  "name": "Facebook Link Copier",
  "description": "Copy original Facebook post links instantly with clean, share-ready URLs.",
  "version": "1.0.1",
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": ["https://www.facebook.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}